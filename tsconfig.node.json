{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2020",
    // "outDir": "./dist", removed this so ts compilation outputs to same folders to keep relative file paths consistent
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["src/**/*", "node_modules"],
  "forceConsistentCasingInFileNames": true,
}
